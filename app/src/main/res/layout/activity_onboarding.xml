<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_gradient">

    <!-- Animated hearts background decoration (optional) -->
    <ImageView
        android:id="@+id/heart_decoration_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_like"
        android:alpha="0.15"
        android:rotation="15"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="40dp"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/heart_decoration_2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_like"
        android:alpha="0.1"
        android:rotation="-20"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="160dp"
        android:layout_marginStart="30dp"
        app:tint="#FFFFFF" />

    <ImageView
        android:id="@+id/heart_decoration_3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_like"
        android:alpha="0.12"
        android:rotation="25"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="200dp"
        android:layout_marginStart="50dp"
        app:tint="#FFFFFF" />

    <!-- Main content container -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="32dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4">

        <!-- Logo container with shadow effect -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="48dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="100dp"
            app:cardElevation="12dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="App Logo"
                    android:scaleType="centerInside"
                    android:src="@drawable/logomap" />
            </FrameLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Title with better typography -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:alpha="0.9"
            android:text="Welcome to"
            android:textColor="#F5F5F5"
            android:textSize="22sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:letterSpacing="0.02"
            android:text="UMN Dating App"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold" />

        <!-- Description with better spacing -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:gravity="center"
            android:text="Find your perfect match"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="56dp"
            android:alpha="0.85"
            android:gravity="center"
            android:text="Connect with people around you"
            android:textColor="#E8E8E8"
            android:textSize="16sp" />

        <!-- Modern continue button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_continue"
            android:layout_width="280dp"
            android:layout_height="64dp"
            android:elevation="8dp"
            android:text="Get Started"
            android:textColor="#5A2D82"
            android:textSize="18sp"
            android:textStyle="bold"
            app:backgroundTint="#FFFFFF"
            app:cornerRadius="32dp"
            app:icon="@android:drawable/ic_media_play"
            app:iconGravity="end"
            app:iconSize="24dp"
            app:iconTint="#5A2D82" />

        <!-- Additional info text -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:alpha="0.7"
            android:gravity="center"
            android:text="Start your journey to find love"
            android:textColor="#FFFFFF"
            android:textSize="13sp" />

    </LinearLayout>

    <!-- Bottom decoration (optional wave or pattern) -->

</androidx.constraintlayout.widget.ConstraintLayout>
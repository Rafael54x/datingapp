<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".fragments.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="?attr/colorSurface">

        <!-- Profile Header -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_profile_placeholder"
            app:civ_border_color="@color/pink"
            app:civ_border_width="2dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/profile_username"
            style="@style/TextAppearance.Material3.HeadlineSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_image"
            tools:text="username" />

        <TextView
            android:id="@+id/profile_bio"
            style="@style/TextAppearance.Material3.BodyLarge"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_username"
            tools:text="I love to swim, hike, and explore new coffee shops." />

        <!-- Buttons -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_see_likes"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="Who Liked You"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="28dp"
            app:backgroundTint="#FF6B9D"
            app:icon="@drawable/ic_like"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toStartOf="@id/btn_my_likes"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/profile_bio" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_my_likes"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="8dp"
            android:text="My Likes"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="28dp"
            app:backgroundTint="#9C27B0"
            app:icon="@drawable/ic_like"
            app:iconGravity="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn_see_likes"
            app:layout_constraintTop_toTopOf="@id/btn_see_likes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_who_passed"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Who You Passed"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="28dp"
            app:backgroundTint="#FF5722"
            app:icon="@drawable/ic_dislike"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/btn_my_likes" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/edit_profile_button"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:text="Edit Profile"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            app:cornerRadius="28dp"
            app:backgroundTint="@color/pink"
            app:icon="@drawable/rounded_contract_edit_24"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/btn_who_passed" />



        <!-- Public Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/public_profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/edit_profile_button">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/public_profile_title"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Public Profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Age -->
                <TextView
                    android:id="@+id/age_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Age"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/public_profile_title" />

                <TextView
                    android:id="@+id/profile_age"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/age_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="20" />

                <!-- Gender -->
                <TextView
                    android:id="@+id/gender_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Gender"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/age_label" />

                <TextView
                    android:id="@+id/profile_gender"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/gender_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Male" />

                <!-- School Year -->
                <TextView
                    android:id="@+id/schoolyear_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="School Year"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/gender_label" />

                <TextView
                    android:id="@+id/profile_schoolyear"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/schoolyear_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="2023" />

                <!-- Major -->
                <TextView
                    android:id="@+id/major_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Major"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/schoolyear_label" />

                <TextView
                    android:id="@+id/profile_major"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    app:layout_constraintBaseline_toBaselineOf="@id/major_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/major_label"
                    android:layout_marginStart="16dp"
                    tools:text="Strategi Komunikasi" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Private Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/private_profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/public_profile_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/private_profile_title"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Private Details"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Name -->
                <TextView
                    android:id="@+id/name_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Full Name"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/private_profile_title" />

                <TextView
                    android:id="@+id/profile_name"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/name_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Rafael" />

                <!-- Email -->
                <TextView
                    android:id="@+id/email_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Email"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/name_label" />

                <TextView
                    android:id="@+id/profile_email"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/email_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="youremail@example.com" />

                <!-- Password -->
                <TextView
                    android:id="@+id/password_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Password"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/email_label" />

                <Button
                    android:id="@+id/btn_change_password"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:text="Change"
                    android:textColor="@color/pink"
                    android:textSize="16sp"
                    android:fontFamily="sans-serif-medium"
                    android:paddingHorizontal="24dp"
                    app:layout_constraintBaseline_toBaselineOf="@id/password_label"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>


        <!-- Preferences Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/preferences_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toBottomOf="@id/private_profile_card">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/preferences_title"
                    style="@style/TextAppearance.Material3.TitleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Preferences"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- Preferred Gender -->
                <TextView
                    android:id="@+id/preference_gender_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Preferred Gender"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/preferences_title" />

                <TextView
                    android:id="@+id/preference_gender"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/preference_gender_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Female" />

                <!-- Preferred Year -->
                <TextView
                    android:id="@+id/preference_range_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Preferred Year"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/preference_gender_label" />

                <TextView
                    android:id="@+id/preference_range"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBaseline_toBaselineOf="@id/preference_range_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:text="Any" />

                <!-- Preferred Major -->
                <TextView
                    android:id="@+id/preference_major_label"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Preferred Major"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/preference_range_label" />

                <TextView
                    android:id="@+id/preference_major"
                    style="@style/TextAppearance.Material3.BodyLarge"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:gravity="end"
                    app:layout_constraintBaseline_toBaselineOf="@id/preference_major_label"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@id/preference_major_label"
                    tools:text="Any" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_logout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="24dp"
            android:text="Logout"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#F44336"
            app:cornerRadius="28dp"
            app:backgroundTint="#E0E0E0"
            app:icon="@drawable/ic_logout"
            app:iconTint="#757575"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/preferences_card" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete_account"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="24dp"
            android:text="Delete Account"
            android:textSize="15sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#F44336"
            app:cornerRadius="28dp"
            app:strokeColor="#F44336"
            app:strokeWidth="2dp"
            app:icon="@drawable/ic_delete"
            app:iconTint="#F44336"
            app:iconGravity="textStart"
            app:layout_constraintTop_toBottomOf="@id/btn_logout"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>